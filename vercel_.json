{
  "version": 2,
  "builds": [
    {
      "src": "apps/backend/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": [
          "dist/apps/backend/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "apps/backend/src/main.ts"
    }
  ],
  "installCommand": "npm install",
  "buildCommand": "npx nx build backend --prod",
  "outputDirectory": "dist/apps/backend"
}
